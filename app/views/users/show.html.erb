<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>
  <%= link_to "Send an Invite", invite_path, class: "btn btn-primary mb1 bg-teal" %>
  <section>
    <h1>Bookmarked Segments</h1>
  </section>
  <% if current_user.github_token? %>
    <section>
      <h2>Github</h2>
        <h1>Repos</h1>
        <% @github.five_repos.each do |repo| %>
          <p><%= link_to "#{repo.name}", repo.url %></p>
        <% end %>
      <h1>Followers</h1>
      <% @github.followers.each do |github_user| %>
      <p><%= link_to "#{github_user.name}", github_user.url %></p>
      <% end %>
      <h1>Following</h1>
      <% @github.following.each do |github_user| %>
      <p><%= link_to "#{github_user.name}", github_user.url %></p>
      <% end %>
    </section>
    <% else %>
      <section>
        <%= link_to "Link to Github", github_login_path %>
      </section>
  <% end %>
</section>
